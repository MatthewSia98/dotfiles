{
    "title": "Swap control and command",
    "rules": [
        {
            "description": "Remap control to command",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_control",
                        "modifiers": {
                            "optional": [
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^org.mozilla.firefox$",
                                "^org.mozilla.thunderbird$"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Remap command to control",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": [
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_control"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^org.mozilla.firefox$",
                                "^org.mozilla.thunderbird$"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
